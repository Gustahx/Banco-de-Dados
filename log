CREATE DATABASE seguranca;

USE seguranca;

CREATE TABLE cliente (
	id INT AUTO_INCREMENT PRIMARY KEY,
	nome VARCHAR (500),
	cpf VARCHAR(15),
	telefone VARCHAR (15),
	endereco VARCHAR (1000)
);	  
 
 CREATE TABLE venda (
 	id INT AUTO_INCREMENT PRIMARY KEY,
 	dia DATETIME,
	valor FLOAT
);

